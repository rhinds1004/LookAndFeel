<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:ordering="sequentially">

    <objectAnimator android:duration="2000">
        <propertyValuesHolder
            android:propertyName="backgroundColor"
            android:valueFrom="@color/uwDarkSlateBlue"
            android:valueTo="@color/uwBlack" />
        <propertyValuesHolder
            android:propertyName="textColor"
            android:valueFrom="@color/uwDarkKhaki"
            android:valueTo="@color/uwDarkSlateBlue" />
    </objectAnimator>

    <objectAnimator android:duration="2000"
        android:propertyName="backgroundColor"
        android:valueFrom="@color/uwBlack"
        android:valueTo="@color/uwDarkSlateBlue" />

    <objectAnimator android:duration="2000"
        android:propertyName="textColor"
        android:valueFrom="@color/uwDarkSlateBlue"
        android:valueTo="@color/uwDarkKhaki" />

    <objectAnimator
        android:duration="2000"
        android:interpolator="@android:anim/linear_interpolator"
        android:propertyName="alpha"
        android:valueFrom="1.0"
        android:valueTo="0.5" />

    <objectAnimator
        android:duration="2000"
        android:interpolator="@android:anim/linear_interpolator"
        android:propertyName="alpha"
        android:valueFrom="0.5"
        android:valueTo="1.0" />


    <objectAnimator
        android:duration="2000"
        android:interpolator="@android:anim/linear_interpolator"
        android:propertyName="alpha"
        android:valueFrom="1.0"
        android:valueTo="0.0" />

    <objectAnimator
        android:duration="2000"
        android:interpolator="@android:anim/linear_interpolator"
        android:propertyName="alpha"
        android:valueTo="1.0"
        android:repeatCount="infinite"
        android:repeatMode="reverse"/>


</set>